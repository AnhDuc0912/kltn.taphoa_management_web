{% extends "_base.html" %}
{% block body %}
<div class="d-flex align-items-center mb-3">
  <h4 class="me-auto">Mô tả SKU #{{ sku[0] }} — {{ sku[1] }}</h4>
  <a class="btn btn-light" href="{{ url_for('skus_bp.skus') }}">← Quay lại danh sách</a>
</div>

<div class="row g-3">
  <div class="col-lg-7">
    <div class="card">
      <div class="card-header py-2">
        <b>Thêm/Chỉnh mô tả chuẩn hoá (sku_texts)</b>
      </div>
      <div class="card-body">
        <form class="row g-2 mb-2" method="post" action="{{ url_for('sku_texts_bp.sku_texts_add', sku_id=sku[0]) }}">
          <div class="col-9">
            <input id="normInput" class="form-control" name="text"
                   placeholder="Nhập mô tả (sẽ tự chuẩn hoá vn_norm trước khi lưu)" required>
          </div>
          <div class="col-auto">
            <button class="btn btn-primary">Thêm mô tả</button>
          </div>
          {% set cap_latest = caption_latest_text|default('') %}
          {% if cap_latest %}
          <div class="col-12">
            <button type="button" class="btn btn-sm btn-outline-secondary"
                    onclick="document.getElementById('normInput').value = {{ cap_latest|tojson }}">
              Dán từ caption đã duyệt gần nhất
            </button>
            <span class="text-muted small ms-2">“{{ cap_latest|truncate(80, True, '…') }}”</span>
          </div>
          {% endif %}
        </form>

        <div class="table-responsive">
          <table class="table table-sm align-middle">
            <thead>
              <tr>
                <th style="width:70px">ID</th>
                <th>normalized_text</th>
                <th class="text-end" style="width:260px">Thao tác</th>
              </tr>
            </thead>
            <tbody>
              {% for tid, text in rows %}
              <tr>
                <td class="text-muted">{{ tid }}</td>
                <td style="max-width: 680px">{{ text }}</td>
                <td class="text-end">
                  <div class="d-flex gap-2 justify-content-end">
                    <form class="d-flex gap-2" method="post" action="{{ url_for('sku_texts_bp.sku_texts_update', sku_id=sku[0], text_id=tid) }}">
                      <input class="form-control form-control-sm" name="text" value="{{ text }}" style="max-width: 520px">
                      <button class="btn btn-sm btn-outline-primary">Lưu</button>
                    </form>
                    <form method="post" action="{{ url_for('sku_texts_bp.sku_texts_delete', sku_id=sku[0], text_id=tid) }}"
                          onsubmit="return confirm('Xoá mô tả này?')">
                      <button class="btn btn-sm btn-outline-danger">Xoá</button>
                    </form>
                  </div>
                </td>
              </tr>
              {% endfor %}
              {% if rows|length == 0 %}
              <tr><td colspan="3" class="text-center text-muted">Chưa có mô tả nào</td></tr>
              {% endif %}
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  <div class="col-lg-5">
    <div class="card">
      <div class="card-header py-2">
        <b>Gợi ý & Thông tin tham chiếu (optional)</b>
      </div>
      <div class="card-body small">
        {% if cover_url %}
          <div class="mb-2">
            <img src="{{ cover_url }}" style="max-height:160px;object-fit:cover;border-radius:8px">
          </div>
        {% endif %}

        {% if ocr_text %}
          <div class="mb-2">
            <span class="badge bg-light text-dark me-1">OCR</span>
            <div class="text-muted">{{ ocr_text }}</div>
          </div>
        {% endif %}

        {% if caption_latest_text %}
          <div class="mb-2">
            <span class="badge bg-light text-dark me-1">Caption đã duyệt</span>
            <div>{{ caption_latest_text }}</div>
          </div>
        {% endif %}

        {% set facets = sku_facets|default([]) %}
        {% if facets %}
          <div class="mb-2">
            <span class="badge bg-light text-dark me-1">Facets</span>
            {% for f in facets %}
              <span class="badge bg-secondary-subtle border text-dark">{{ f }}</span>
            {% endfor %}
          </div>
        {% endif %}

        {% if colors %}
          <div class="mb-2">
            <span class="badge bg-light text-dark me-1">Màu</span>
            {% for c in colors %}
              <span class="badge" style="background:#eee;color:#333">{{ c }}</span>
            {% endfor %}
          </div>
        {% endif %}

        <div class="text-muted">* Các khối trên sẽ tự ẩn nếu backend chưa truyền dữ liệu.</div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
